    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/top_bar_middle"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="2dip" >

        <TextView
            android:id="@+id/backtoSetButton"
            android:layout_width="60dip"
            android:layout_height="35dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/top_bar_back"
            android:gravity="center_vertical"
            android:paddingLeft="20dip"
            android:text="@string/back"
            android:textColor="#FFFFFF"
            android:textSize="15sp" >
        </TextView>

        <TextView
            android:layout_width="104dp"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical|center"
            android:gravity="center"
            android:text="关于作者"
            android:textColor="#000000"
            android:textSize="19sp"></TextView>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="#004499"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="#004499"
        android:textSize="15sp" />

    <ImageView
    android:layout_width="300dp"
    android:layout_height="250dp"
    android:src="@drawable/git_cat"
    android:layout_gravity="center_horizontal" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="程序员一枚"
    android:textColor="#004499"
    android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="https://github.com/wangdongxuking61"
        android:textColor="#004499"
        android:textSize="15sp" />

    <TextView
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
	android:textSize="30sp"
    android:gravity="center_horizontal"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="超级课表"
    android:textColor="#0000ff"
    android:textSize="25sp"
    android:textStyle="bold|italic" />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="伴在你身边，伴随你成长"
    android:textColor="#0000ff"
    android:textSize="25sp"
    android:textStyle="bold|italic" />

